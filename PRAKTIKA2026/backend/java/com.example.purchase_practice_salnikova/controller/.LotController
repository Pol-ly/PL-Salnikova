package com.example.purchase_practice_salnikova.controller;

import com.example.purchase_practice_salnikova.dto.LotDTO;
import com.example.purchase_practice_salnikova.jooq.tables.Lot;
import com.example.purchase_practice_salnikova.jooq.tables.records.LotRecord;
import org.jooq.DSLContext;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;

import java.util.List;
import java.util.Map;

@RestController
@RequestMapping("/api/lots")
@CrossOrigin(origins = "*")
public class LotController {

    @Autowired
    private DSLContext dsl;

    private final Lot L = Lot.LOT;

    // 1. ПОЛУЧЕНИЕ всех лотов
    @GetMapping
    public List<Map<String, Object>> getAllLots() {
        return dsl.selectFrom(L)
                .fetchMaps();
    }

    // 2. СОЗДАНИЕ нового лота
    @PostMapping
    public ResponseEntity<String> createLot(@RequestBody LotDTO lotDTO) {
        try {
            LotRecord record = dsl.newRecord(L);

            record.setLotName(lotDTO.getLotName());
            record.setCustomerCode(lotDTO.getCustomerCode());
            record.setPrice(
                    lotDTO.getPrice() != null
                            ? java.math.BigDecimal.valueOf(lotDTO.getPrice())
                            : null
            );
            record.setCurrencyCode(lotDTO.getCurrencyCode());
            record.setNdsRate(lotDTO.getNdsRate());
            record.setPlaceDelivery(lotDTO.getPlaceDelivery());
            record.setDateDelivery(lotDTO.getDateDelivery());

            dsl.insertInto(L)
                    .set(record)
                    .execute();

            return ResponseEntity.ok("Лот создан успешно");
        } catch (Exception e) {
            return ResponseEntity.badRequest()
                    .body("Ошибка при создании лота: " + e.getMessage());
        }
    }

    // 3. УДАЛЕНИЕ лота
    @DeleteMapping("/customer/{customerCode}")
    public ResponseEntity<String> deleteLotsByCustomer(@PathVariable String customerCode) {
        int deleted = dsl.deleteFrom(L)
                .where(L.CUSTOMER_CODE.eq(customerCode))
                .execute();

        return ResponseEntity.ok("Удалено лотов: " + deleted);
    }
}
